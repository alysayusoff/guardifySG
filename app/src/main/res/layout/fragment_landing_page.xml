<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landingPage">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/content"
                android:scaleType="fitCenter"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="@color/teal_200"
                app:sliderIndicatorUnselectedColor="@color/white"
                app:sliderScrollTimeInSec="2"
                app:sliderStartAutoCycle="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/questionnaireContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#CCCCCC"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_slider">

                <TextView
                    android:id="@+id/findSuitable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/questionnaireText"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/questionnaireButton"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/questionnairebutton_border"
                    android:contentDescription="@string/content"
                    android:padding="8dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/image__6_"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/latestNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/latestNews"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#000000"
                android:textSize="30sp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/questionnaireContainer"
                app:layout_constraintBottom_toTopOf="@id/newsContainer"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/newsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="#ECECEC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/latestNews">

                <TextView
                    android:id="@+id/newsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/artTitle1"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toTopOf="@id/newsShortDesc"
                    app:layout_constraintEnd_toStartOf="@id/newsLogo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/newsShortDesc"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/artShortDesc1"
                    android:textColor="#838383"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/newsLogo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/newsTitle" />

                <ImageView
                    android:id="@+id/newsLogo"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:contentDescription="@string/content"
                    android:padding="5dp"
                    android:src="@drawable/image_from_ios_67"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/newsTitle"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/newsLongDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/artLongDesc1"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/newsContainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="#ECECEC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/newsContainer">

                <TextView
                    android:id="@+id/newsTitle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/artTitle2"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toTopOf="@id/newsDescription2"
                    app:layout_constraintEnd_toStartOf="@id/newsLogo2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/newsDescription2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/artShortDesc2"
                    android:textColor="#838383"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/newsLogo2"
                    app:layout_constraintTop_toBottomOf="@id/newsTitle2" />

                <ImageView
                    android:id="@+id/newsLogo2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:contentDescription="@string/content"
                    android:padding="5dp"
                    android:src="@drawable/ntuc_dude"
                    app:layout_constraintStart_toEndOf="@id/newsTitle2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/newsLongDesc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/artLongDesc2"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/newsContainer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="#ECECEC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/newsContainer2">

                <TextView
                    android:id="@+id/newsTitle3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Great Eastern offers complimentary COVID-19 protection coverage for all Singapore residents"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toTopOf="@id/newsDescription3"
                    app:layout_constraintEnd_toStartOf="@id/newsLogo3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/newsDescription3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Leading insurer Great Eastern is continuing its efforts to protect the community and support the national phased recovery with the launch of the GREAT Covid Care Plan, a complimentary post-vaccination protection plan available to all Singapore residents"
                    android:textColor="#838383"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toStartOf="@id/newsLogo3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/newsTitle3" />

                <ImageView
                    android:id="@+id/newsLogo3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:contentDescription="@string/content"
                    android:padding="5dp"
                    android:src="@drawable/greateastern_covid_plan"
                    app:layout_constraintStart_toEndOf="@id/newsTitle3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/newsLongDesc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The GREAT Covid Care Plan provides a cash payout of S$200 per day of hospitalisation up to a total of $2,000, in the event one is hospitalised due to COVID-19 after their vaccination. The plan provides worldwide coverage so that hospitalisation in Singapore as well as overseas is covered. This will provide additional peace of mind for Singaporeans who may travel abroad for work or leisure, and for overseas residents returning to their home country for visits as countries start to open up.

This free coverage applies to any Singapore resident who has completed his/her first dose of a COVID-19 vaccine2 approved for use by the Health Sciences Authority or supplied under the Special Access Route (SAR). Coverage also includes children who have been vaccinated. Parents may register on behalf of their children who are under 18.

Registration on Great Eastern’s website is required to activate the free coverage, and all eligible recipients will receive their GREAT Covid Care insurance certificate via email once their sign up is confirmed. The plan provides coverage for 12 months from the date of registration or when the individual receives his/her first dose of COVID-19 vaccine, whichever is later. The sign up period ends on 30 September 2021 and applicants must also complete their first vaccination dose by 31 December 2021 to qualify for the coverage.

The GREAT Covid Care Plan complements the coverage provided by the S$1 million GREAT Vaccine Fund launched in January 2021 and is the latest support measure that Great Eastern has rolled out with the progression of the COVID-19 vaccination programme in Singapore.

More information on the GREAT Covid Care Plan can be found on Great Eastern’s website. The company will also be reaching out to its customers through its financial representatives."
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/newsContainer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="#ECECEC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/newsContainer3">

                <TextView
                    android:id="@+id/newsTitle4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/newsTitle"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toTopOf="@id/newsDescription4"
                    app:layout_constraintEnd_toStartOf="@id/newsLogo4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/newsDescription4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/newsDesc"
                    android:textColor="#838383"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toStartOf="@id/newsLogo4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/newsTitle4" />

                <ImageView
                    android:id="@+id/newsLogo4"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:contentDescription="@string/content"
                    android:padding="5dp"
                    android:src="@drawable/covid"
                    app:layout_constraintStart_toEndOf="@id/newsTitle4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/newsLongDesc4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEST"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/newsContainer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="#ECECEC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/newsContainer4">

                <TextView
                    android:id="@+id/newsTitle5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/newsTitle"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toTopOf="@id/newsDescription5"
                    app:layout_constraintEnd_toStartOf="@id/newsLogo5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/newsDescription5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/newsDesc"
                    android:textColor="#838383"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toStartOf="@id/newsLogo5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/newsTitle5" />

                <ImageView
                    android:id="@+id/newsLogo5"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:contentDescription="@string/content"
                    android:padding="5dp"
                    android:src="@drawable/covid"
                    app:layout_constraintStart_toEndOf="@id/newsTitle5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/newsLongDesc5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEST"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>