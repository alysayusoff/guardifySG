<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".policiesPage">

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D5D5D5"
        android:baselineAligned="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="681dp"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/typeContainer"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp">

            <TextView
                android:id="@+id/browseType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2D8BBD"
                android:fontFamily="sans-serif-condensed-medium"
                android:paddingStart="5dp"
                android:text="BROWSE INSURANCE POLICIES BY TYPE"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <HorizontalScrollView
                android:id="@+id/horizontal1"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:background="#2D8BBD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/browseType">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/containerPolicyType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textCritical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Critical Illness"
                        android:textColor="#FFFFFF"
                        android:textSize="11dp"
                        app:layout_constraintBottom_toTopOf="@id/typeCriticalIllness"
                        app:layout_constraintEnd_toEndOf="@id/typeCriticalIllness"
                        app:layout_constraintStart_toStartOf="@id/typeCriticalIllness"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/typeCriticalIllness"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:onClick="handleSelection"
                        android:background="@drawable/radius_border"
                        android:padding="15dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cancerwhite"
                        app:layout_constraintEnd_toStartOf="@id/typeDisability"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textCritical" />

                    <TextView
                        android:id="@+id/textDisability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Disability"
                        android:textColor="#FFFFFF"
                        android:textSize="11dp"
                        app:layout_constraintBottom_toTopOf="@id/typeDisability"
                        app:layout_constraintEnd_toEndOf="@id/typeDisability"
                        app:layout_constraintStart_toStartOf="@id/typeDisability"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/typeDisability"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:onClick="handleSelection"
                        android:background="@drawable/radius_border"
                        android:padding="15dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/disability"
                        app:layout_constraintStart_toEndOf="@id/typeCriticalIllness"
                        app:layout_constraintTop_toBottomOf="@id/textDisability" />

                    <TextView
                        android:id="@+id/textHospitalisation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Hospitalisation"
                        android:textColor="#FFFFFF"
                        android:textSize="11dp"
                        app:layout_constraintBottom_toTopOf="@id/typeHospitalisation"
                        app:layout_constraintEnd_toEndOf="@id/typeHospitalisation"
                        app:layout_constraintStart_toStartOf="@id/typeHospitalisation"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/typeHospitalisation"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:onClick="handleSelection"
                        android:background="@drawable/radius_border"
                        android:padding="15dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/healthwhite"
                        app:layout_constraintStart_toEndOf="@id/typeDisability"
                        app:layout_constraintTop_toBottomOf="@id/textHospitalisation" />

                    <TextView
                        android:id="@+id/textAccident"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Accident"
                        android:textColor="#FFFFFF"
                        android:textSize="11dp"
                        app:layout_constraintBottom_toTopOf="@id/typeAccident"
                        app:layout_constraintEnd_toEndOf="@id/typeAccident"
                        app:layout_constraintStart_toStartOf="@id/typeAccident"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/typeAccident"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="7dp"
                        android:onClick="handleSelection"
                        android:background="@drawable/radius_border"
                        android:padding="15dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/carwhite"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/typeHospitalisation"
                        app:layout_constraintTop_toBottomOf="@id/textAccident" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/textPolicies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text=" INSURANCE POLICIES"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontal1" />

            <ImageView
                android:id="@+id/filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentRight="true"
                android:onClick="handleSelection"
                android:scaleType="fitCenter"
                android:src="@drawable/noun_filters_220951__1_"
                app:layout_constraintTop_toBottomOf="@id/horizontal1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/containerAllPolicies"/>

            <androidx.constraintlayout.widget.ConstraintLayout
