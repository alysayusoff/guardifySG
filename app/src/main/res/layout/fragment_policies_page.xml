                    <TextView
                        android:id="@+id/policyTitle5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="AIA Beyond Critical Care"
                        android:textColor="#000000"
                        android:textSize="17dp"
                        app:layout_constraintStart_toEndOf="@id/imgLogo5"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/policyDescription5"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Offers premium refund for 43 Major illnesses, relapse as well as mental illness. Comes with optional add-ons to cover upto 104 other illnesses."
                        android:textColor="#838383"
                        android:textSize="13dp"
                        app:layout_constraintStart_toEndOf="@id/imgLogo5"
                        app:layout_constraintTop_toBottomOf="@id/policyTitle5" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/containerDynamicPolicy6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#F1F1F1"
                    app:layout_constraintTop_toBottomOf="@id/containerDynamicPolicy5"
                    tools:layout_editor_absoluteX="3dp">

                    <ImageView
                        android:id="@+id/imgLogo6"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:padding="5dp"
                        android:src="@drawable/aia_logo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/policyTitle6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="sans-serif-condensed-medium"
