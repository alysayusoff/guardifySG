                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Offers premium refund for 43 Major illnesses, relapse as well as mental illness. Comes with optional add-ons to cover upto 104 other illnesses."
                        android:textColor="#838383"
                        android:textSize="13dp"
                        app:layout_constraintStart_toEndOf="@id/imgLogo2"
                        app:layout_constraintTop_toBottomOf="@id/policyTitle2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/containerDynamicPolicy3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
